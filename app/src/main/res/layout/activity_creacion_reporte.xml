<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreacionReporte"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
        android:id="@+id/Imagen"
        android:layout_width="match_parent"
        android:layout_height="191dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@mipmap/juarez" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/btnUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicacion del problema"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>


        <TextView
            android:id="@+id/DireccionReporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Direccion del reporte"
            android:textSize="19sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />



        <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/etTexto"
        android:hint="Ingresa tu Nombre"/>



        <EditText
            android:id="@+id/etDireec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:hint="Domicilio" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/Descripcion"
            android:hint="Ingresa una descripcion del problema el cual quiere reportar.



"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Spinner
            android:id="@+id/spinner"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/btnCamara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tomar Foto"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/btnCamaraSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar Foto"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />






        <Button
            android:id="@+id/btnGenerar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generar Reporte"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Informacion para el correo"

            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/Subjet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asunto:"
            android:textSize="18sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Agregar informacion extra:"

            android:textSize="18sp"
         />

        <EditText
            android:id="@+id/Mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="10"
            android:gravity="start|top"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />



        <Button
        android:id="@+id/btnEnviarCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />




    </LinearLayout>
</ScrollView>